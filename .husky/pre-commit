#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run ESLint
echo "📝 Checking code style with ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint found issues. Please fix them before committing."
  exit 1
fi

# Run Prettier check
echo "🎨 Checking code formatting with Prettier..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Prettier found formatting issues. Please run 'npm run format' to fix them."
  exit 1
fi

# Run tests (only unit tests for speed)
echo "🧪 Running unit tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix them before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
