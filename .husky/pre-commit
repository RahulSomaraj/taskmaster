#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run ESLint
echo "ğŸ“ Checking code style with ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found issues. Please fix them before committing."
  exit 1
fi

# Run Prettier check
echo "ğŸ¨ Checking code formatting with Prettier..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Prettier found formatting issues. Please run 'npm run format' to fix them."
  exit 1
fi

# Run tests (only unit tests for speed)
echo "ğŸ§ª Running unit tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
