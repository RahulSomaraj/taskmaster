<%- include('../partials/header', { title: task.title }) %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= task.title %></h1>
          <p class="text-gray-600 mt-2">Task Details</p>
        </div>
        <div class="flex space-x-3">
          <a href="/tasks/daily" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Tasks
          </a>
          <a href="/tasks/<%= task._id %>/edit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
            <i class="fas fa-edit mr-2"></i>
            Edit Task
          </a>
        </div>
      </div>
    </div>

    <!-- Task Details -->
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="p-6">
        <!-- Task Header -->
        <div class="flex items-start justify-between mb-6">
          <div class="flex-1">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2"><%= task.title %></h2>
            <% if (task.description) { %>
              <p class="text-gray-600 text-lg"><%= task.description %></p>
            <% } %>
          </div>
          <div class="flex items-center space-x-2 ml-4">
            <!-- Status Badge -->
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= task.status === 'completed' ? 'bg-green-100 text-green-800' : task.status === 'cancelled' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
              <i class="fas <%= task.status === 'completed' ? 'fa-check-circle' : task.status === 'cancelled' ? 'fa-times-circle' : 'fa-clock' %> mr-2"></i>
              <%= task.status.charAt(0).toUpperCase() + task.status.slice(1) %>
            </span>

            <!-- Priority Badge -->
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= task.priority === 'high' ? 'bg-red-100 text-red-800' : task.priority === 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
              <i class="fas <%= task.priority === 'high' ? 'fa-fire' : task.priority === 'medium' ? 'fa-clock' : 'fa-leaf' %> mr-2"></i>
              <%= task.priority.charAt(0).toUpperCase() + task.priority.slice(1) %>
            </span>

            <!-- Category Badge -->
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-[#00CED1]/10 text-[#00CED1] border border-[#00CED1]/20">
              <i class="fas fa-tag mr-2"></i>
              <%= task.category.charAt(0).toUpperCase() + task.category.slice(1) %>
            </span>

            <!-- Overdue Badge -->
            <% if (task.isOverdue) { %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                <i class="fas fa-exclamation-triangle mr-2"></i>Overdue
              </span>
            <% } %>
          </div>
        </div>

        <!-- Task Information Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <!-- Date and Time -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Date & Time</h3>
            <div class="space-y-2">
              <div class="flex items-center">
                <i class="fas fa-calendar text-gray-400 mr-3 w-5"></i>
                <span class="text-gray-900"><%= new Date(task.date).toLocaleDateString() %></span>
              </div>
              <% if (task.dueTime) { %>
                <div class="flex items-center">
                  <i class="fas fa-clock text-gray-400 mr-3 w-5"></i>
                  <span class="text-gray-900"><%= task.dueTime %></span>
                </div>
              <% } %>
            </div>
          </div>

          <!-- Task Details -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Task Details</h3>
            <div class="space-y-2">
              <% if (task.estimatedMinutes) { %>
                <div class="flex items-center">
                  <i class="fas fa-hourglass-half text-gray-400 mr-3 w-5"></i>
                  <span class="text-gray-900">Estimated: <%= Math.floor(task.estimatedMinutes / 60) %>h <%= task.estimatedMinutes % 60 %>m</span>
                </div>
              <% } %>
              <div class="flex items-center">
                <i class="fas fa-calendar-plus text-gray-400 mr-3 w-5"></i>
                <span class="text-gray-900">Created: <%= new Date(task.createdAt).toLocaleDateString() %></span>
              </div>
              <% if (task.updatedAt && task.updatedAt !== task.createdAt) { %>
                <div class="flex items-center">
                  <i class="fas fa-edit text-gray-400 mr-3 w-5"></i>
                  <span class="text-gray-900">Updated: <%= new Date(task.updatedAt).toLocaleDateString() %></span>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Tags -->
        <% if (task.tags && task.tags.length > 0) { %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Tags</h3>
            <div class="flex flex-wrap gap-2">
              <% task.tags.forEach(function(tag) { %>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                  <%= tag %>
                </span>
              <% }); %>
            </div>
          </div>
        <% } %>

        <!-- Actions -->
        <div class="flex items-center space-x-4 pt-6 border-t border-gray-200">
          <% if (task.status === 'pending') { %>
            <form action="/tasks/<%= task._id %>/complete" method="POST" class="inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
                <i class="fas fa-check mr-2"></i>
                Mark Complete
              </button>
            </form>
            <form action="/tasks/<%= task._id %>/cancel" method="POST" class="inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <i class="fas fa-times mr-2"></i>
                Cancel Task
              </button>
            </form>
          <% } else if (task.status === 'completed') { %>
            <form action="/tasks/<%= task._id %>/reset" method="POST" class="inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <i class="fas fa-undo mr-2"></i>
                Reset to Pending
              </button>
            </form>
          <% } else if (task.status === 'cancelled') { %>
            <form action="/tasks/<%= task._id %>/reset" method="POST" class="inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <i class="fas fa-undo mr-2"></i>
                Reactivate Task
              </button>
            </form>
          <% } %>

          <form action="/tasks/<%= task._id %>" method="DELETE" class="inline">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="button" onclick="confirmDelete(event)" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
              <i class="fas fa-trash mr-2"></i>
              Delete Task
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function confirmDelete(event) {
  if (confirm('Are you sure you want to delete this task? This action cannot be undone.')) {
    event.target.closest('form').submit();
  }
}
</script>

<%- include('../partials/footer') %>
